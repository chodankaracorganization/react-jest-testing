{
  "name": "react-jest-testing",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "jest": "^30.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
